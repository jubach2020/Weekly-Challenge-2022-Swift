#include <iostream>
#include <ctime>
using namespace std;

long double factorial(long numero);

int main(void){
    // Funcion  recursiva para calcular el factorial de un numero!
    long double numero;
    long double r;
    int t0, t1;
    
    cin >> numero;
    t0 = clock();
    r=factorial(numero);
    t1 = clock();
    double time = (double(t1-t0)/CLOCKS_PER_SEC);
    cout << fixed << numero << "!=" << r << endl;
    cout << "tiempo ejecucion: " << time << endl;
    return 0;
}

long double factorial(long numero) {
    long double minumero;
    if(numero<0) return 0;
    else if(numero >1) return numero*factorial(numero-1);
    return 1;
}
